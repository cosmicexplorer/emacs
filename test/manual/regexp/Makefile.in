top_srcdir = @top_srcdir@
top_builddir = @top_builddir@
EMACS ?= $(top_builddir)/src/emacs
MANUAL_TEST_SRC = $(top_srcdir)/test/manual
PERF_TEST_SRC = $(MANUAL_TEST_SRC)/perf
REGEXP_TEST_SRC = $(MANUAL_TEST_SRC)/regexp

.PHONY: all perf

all: perf

perf.el: $(PERF_TEST_SRC)/perf.el
	cp -v $< $@

regexp-perf.el: $(REGEXP_TEST_SRC)/regexp-perf.el
	cp -v $< $@

perf: perf.el regexp-perf.el
	-$(EMACS) -Q -l ./perf.el -l ./regexp-perf.el -f perf-run-batch
